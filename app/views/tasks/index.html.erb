<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= link_to '終了期限でソート', tasks_path(sort_option: 'daedline'), meshod: :post %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Deadline</th>
      <th>Progress</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.progress %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
