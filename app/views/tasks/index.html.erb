<p id="notice"><%= notice %></p>

<h1>タスク</h1>
<%= link_to '終了期限でソート', tasks_path(sort_option: 'daedline'), meshod: :post %>
<%= form_with(model: Task.new, url: tasks_path, method: :get, local: true) do |form| %>
  <div class="field">
    <%= form.label ("タイトル") %>
    <%= form.text_field :name %>
  </div>
  <div class="task_title">
    <%= form.label ("進捗") %>
    <%= form.select :progress, [["未着手", 0 ], ["着手中", 1 ], ["完了", 2 ]] ,{include_blank: true}%>
  </div>
   <%= form.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>進捗</th>
      <th>優先順位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.progress %></td>
        <td><%= task.priority %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '消去', task, method: :delete, data: { confirm: '本当によろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_task_path %>
 <%= paginate @tasks %>
