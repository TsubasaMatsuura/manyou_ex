<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= link_to '終了期限でソート', tasks_path(sort_option: 'daedline'), meshod: :post %>
<%= form_with(model: Task.new, url: tasks_path, method: :get, local: true) do |form| %>
  <div class="field">
    <%= form.label ("activerecord.attributes.task.name") %>
    <%= form.text_field :name %>
  </div>
  <div class="task_title">
    <%= form.label ("activerecord.attributes.task.progress") %>
    <%= form.select :progress, [["未着手", 0 ], ["着手中", 1 ], ["完了", 2 ]] ,{include_blank: true}%>
  </div>
   <%= form.submit "検索" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Deadline</th>
      <th>Progress</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.progress %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
